<div class="container h-100 py-8">
    <div class="row m-4 d-flex justify-content-center align-items-center h-100">
       <div class="card shadow-2-strong mb-5 mb-lg-0" style="border-radius: 16px;">
        <table class="table table-hover">
                <thead class="thead table-borderless">
                    <tr class="table-borderless">
                    <th scope="col">#</th>
                    <th scope="col">Product</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">ProductPrice</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-bordered">
                @if (Model.Products.Count == 0)
                {
                <tr>
                    <td colspan="5">No active Products</td>
                </tr>
                }
                else
                {
                @for (int i = 0; i < Model.Products.Count; i++)
                {
                var item = Model.Products[i];

                <tr>
                    <th scope="row">@(i + 1)</th>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@item.CurrnetProduct.ProductImage"
                                     class="img-fluid rounded-3"
                                     style="width: 120px;" alt="Book">
                                    </div>
                                </td>
                    <td>@item.CurrnetProduct.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>$@item.CurrnetProduct.ProductPrice</td>
                    <td>
                        <a asp-controller="ShoppingCard" asp-action="DeleteFromShoppingCart" asp-route-id="@item.ProductId"
                           class="btn btn-link btn-rounded btn-sm fw-bold"
                           data-mdb-ripple-color="dark">
                            Delete From Shopping Cart
                        </a>
                    </td>
                </tr>
                }
                }
            </tbody>
            <tfoot class="thead table-borderless">
                <tr>
                        <th scope="col" class="align-middle">Total Price:</th>
                    <th colspan="3"></th>
                        <th colspan="1" class="align-middle">$@Model.TotalPrice</th>
                        <td colspan="1">
                            @if (Model.TotalPrice != 0)
                            {
                                <form asp-controller="ShoppingCard" asp-action="PayOrder" method="post">
                                    <article>
                                        <script src="https://checkout.stripe.com/checkout.js"
                                            class="stripe-button"
                                            data-key="@Stripe.Value.PublishableKey"
                                            data-locale="auto"
                                            data-description="EShop Application Payment"
                                            data-amount="@(Model.TotalPrice * 100)"
                                            data-label="Pay">
                                        </script>
                                    </article>
                                </form>
                            }
                        </td>
                </tr>
                    
            </tfoot>   
        </table> 
       </div>
    </div>
</div>