@{
}
@model List<EShopAdminApp.Models.Order>

<div class="container">   

    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <div class="row m-4">
        <table class="table table-hover">
            <thead class="thead table-bordered">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">Number of products</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-bordered">
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active Products</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.UserName</td>
                            <td>@item.ProductInOrders.Count</td>
                            <td>
                                <a asp-route-orderId="@item.Id" asp-action="Details" class="btn btn-info">
                                    View Order
                                </a>
                            </td>
                            <td>
                                <a asp-route-orderId="@item.Id" asp-action="CreateInvoice" class="btn btn-info">
                                    Create Invoice
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
           
        </table>
    </div>

</div>